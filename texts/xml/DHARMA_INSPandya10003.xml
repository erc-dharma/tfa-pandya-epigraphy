                <lg n="7" met="uncertain" xml:lang="san-Latn" rendition="class:grantha maturity:83215">
                    <l n="a">brahmadeya-paripā<lb n="6v2=85" break="no"/>lanād ṛte</l>
                    <l n="b">nānyad asti bhuvi dharmma-sādhanam·</l>
                    <l n="c">tasya cāpaha<lb n="6v3=86" break="no"/>raṇād ṛte tathā</l>
                    <l n="d">nānyad asti bhuvi pāpa-sādhanam· <g type="gomutraFinal">.</g></l>
                </lg>
                
                <lg n="8" met="anuṣṭubh" xml:lang="san-Latn" rendition="class:grantha maturity:83215">
                    <l n="a">bahubhi<lb n="6v4=87" break="no"/>r vvasudhā dattā</l>
                    <l n="b">rājabhis sagarādibhiḥ</l>
                    <l n="c">yasya yadā bhū<lb n="6v5=88" break="no"/>mis</l>
                    <l n="d">tasya tasya tadā phalam· <g type="gomutraFinal">.</g></l>
                </lg>
                
                <lg n="9" met="anuṣṭubh" xml:lang="san-Latn" rendition="class:grantha maturity:83215">
                    <l n="a">na viṣaṃ viṣam ity āhūr</l>
                    <l n="b">brahmasvaṃ vi<lb n="6v6=89" break="no"/>ṣam ucyate</l>
                    <l n="c">viṣam ekākinaṃ haṃti</l>
                    <l n="d">brahmasvam· putra-pautri<lb n="7r1=90" break="no"/>kam· <g type="gomutraFinal">.</g></l>
                </lg>
                
                <lg n="10" met="anuṣṭubh" xml:lang="san-Latn" rendition="class:grantha maturity:83215">
                    <l n="a">brahma-sva-rakṣaṇād anyat</l>
                    <l n="b">puṇya-mūlan na vidyate</l>
                    <l n="c">tasyātilaṃgha<lb n="7r2=91" break="no"/>nād anyat</l>
                    <l n="d">pāpa-mūlan na vidyate <unclear><g type="daṇḍa">.</g></unclear></l>
                </lg>
                
                <p>
                    pāṇ·ṭi-p<supplied reason="omitted">·</supplied> perum· paṇaikāraṉ· ma
                    <lb n="7r3=92" break="no"/>kaṉ pāṇṭi-p· perum· paṇaikāraṉ-ākiya <hi rend="grantha">Arikesa</hi>
                    <lb n="7r4=93" break="no"/><hi rend="grantha">r</hi>i Eḻut·tu <g type="gomutraFinal">.</g>
                </p>
                
