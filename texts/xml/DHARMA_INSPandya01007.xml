                    <lb n="18" break="no"/>-nāṭṭu <hi rend="grantha">ccitra</hi>na<hi rend="grantha">dī</hi> Ut=ta<hi rend="grantha">ra</hi>tī<hi rend="grantha">ra</hi>ttilē namakku <hi rend="grantha">dakṣi</hi>
                    <lb n="19" break="no"/>ṇakāśi-y-āka Ālaiyañ ceytu taravēṇum
                    <lb n="20"/>Eṉṟu Eṅkaḷ-uṭaiya <hi rend="grantha">kartta</hi>r perumāḷ <hi rend="grantha">A</hi>rikē<hi rend="grantha">sa</hi>ri
                    <lb n="21" break="no"/><hi rend="grantha">de</hi>var Eṉṟu tiru-nāmam-uṭaiya poṉṉiṉ peru
                    
                    <lb n="22" break="no"/>māḷ parācū3 pāṇu ஷெvar Irunt-aruḷiya Iṭa
                    <lb n="23" break="no"/>ttiṉ uṭaṉē <hi rend="grantha"><unclear>sva</unclear></hi><hi rend="grantha">pna</hi>ttilē tiruvuḷḷampaṟṟi A
                    <lb n="24" break="no"/>ruḷukaiyālē muṉṉāḷ pākāṉu āyirattu muṉ
                    <lb n="25" break="no"/>ṉūṟṟu Aṟupatt' eṭṭiṉ mēl <hi rend="grantha">ṛṣabha</hi>-ñāyaṟṟu
                    <lb n="26" break="no"/>ppattāntiyattiyum pūva pakஷttu usaஜிyum <hi rend="grantha">śukra</hi>
                    <lb n="27" break="no"/>-vāramum peṟṟa uttirattu nāḷ mīṉamu<hi rend="grantha">hurtta</hi>m-ā
                    <lb n="28" break="no"/>ka <hi rend="grantha">karṣa</hi>ṇaiyum ceytu <hi rend="grantha">dakṣi</hi>ṇa<hi rend="grantha">kāśi</hi>-y-āka-t ti
                    <lb n="29" break="no"/>ruppaṭaivīṭum uṇṭu Ākki Uṭaiyā<unclear>r</unclear>
                    <lb n="30"/>viḷanāyaṉaiyum nācciyār Ulakamuḻut-u
                    <lb n="31" break="no"/>ṭaiya nācciyāraiyum <hi rend="grantha">pratiṣṭhi</hi>ttu Iṉṉāya
                    <lb n="32" break="no"/>ṉārkkut tirukkōyil Upānādi sthūpya
                    <lb n="33" break="no"/>tamākavum <hi rend="grantha">Arddhamaṇḍa</hi>pam Iṭaināḻikai
                    <lb n="34"/>ma<hi rend="grantha">hāmaṇḍa</hi>pam so[pā]nam Āva<hi rend="grantha">ra</hi>ṇa<hi rend="grantha">go</hi>
                    <lb n="35" break="no"/>purādikaḷun tiru-p-paṇi ceytu nācciyār
                    <lb n="36"/>Ulakamuḻut-uṭaiya nācciyārkkun ti
                    <lb n="37" break="no"/>ru-k-kōyilum āvāṇamuṅ kuṟaivaṟa tiru
                    <lb n="38" break="no"/>ppaṇiyuñ ceytu <hi rend="grantha">go</hi>puramum āraMbhittu
                    <lb n="39" break="no"/>sahasra liṃgālayamum śakti pīṭhālayamum
                    <lb n="40"/>ceytu <hi rend="grantha">ṛṣabhade</hi>var mutalāka Uḷḷa pari
                    <lb n="41" break="no"/>vāra nāyaṉmāraiyum <hi rend="grantha">pratiṣṭhi</hi>ttu sahasra
                    <lb n="42" break="no"/>liṃgamum śakti pīṭhamum <hi rend="grantha">pratiṣṭhi</hi>ttu <hi rend="grantha">A</hi>rikē<hi rend="grantha">sa</hi>ri
                    <lb n="43" break="no"/>naṅkai Eṉṟu tiru-nāmam-uṭaiya piṭāriyai-
                    <lb n="44" break="no"/>yum <hi rend="grantha">pratiṣṭhi</hi>ttu piṭāri kōyilum mēlai Añ-
                    <lb n="45" break="no"/>cān tiru-vītiyil Arikēsarip piḷḷaiyār tiru-
                    
                    
                    <milestone n="B" type="pagelike" unit="face" break="no"/>
                    <label>North Face</label>
                    <lb n="46" break="no"/>...
                    
                    <lb n="90" break="no"/>ta kāṭukaḷilē pala Iṭattilum Ērvai <gap reason="ellipsis" extent="unknown" unit="line"/>
                    
