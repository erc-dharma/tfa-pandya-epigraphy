<lg n="20" met="anuṣṭubh" xml:lang="san-Latn" rendition="class:grantha maturity:83215">
	<l n="a"><lb n="9v4=145" break="no"/>na hi bhūmi-pradānād vai</l>
	<l n="b">dānam anyad viśiṣyate</l>
	<l n="c">na cāpi bhūmi-haraṇāt</l>
	<l n="d">pāpa<lb n="9v5=146" break="no"/>m anyad vidhīyate <g type="pc">.</g></l>
</lg>
	
<lg n="21" met="anuṣṭubh" xml:lang="san-Latn" rendition="class:grantha maturity:83215">
