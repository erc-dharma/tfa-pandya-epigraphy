<lg n="19" met="vasantatilakā" xml:lang="san-Latn" rendition="class:grantha maturity:83215">
	<l n="a">ra<choice><orig>t</orig><reg>k</reg></choice>ṣān naraḥ parakṛtau vidadhīta vidvān</l>
